* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background-color: #000;
    color: #fff;
    overflow: hidden;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile browsers */
    margin: 0;
    padding: 0;
    touch-action: manipulation; /* Improve touch responsiveness */
}

.container {
    width: 100vw;
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height for mobile browsers */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-sizing: border-box;
}

/* Loading Screen */
.loading-screen {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.loading-content {
    text-align: center;
    max-width: 400px;
    width: 90%;
}

.loading-content h1 {
    font-size: 2em;
    margin-bottom: 30px;
}

.progress-bar {
    width: 100%;
    height: 8px;
    background-color: #333;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 15px;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #4CAF50, #8BC34A);
    width: 0%;
    transition: width 0.3s ease;
}

#loadingText {
    font-size: 1.2em;
    color: #aaa;
}

/* Game Screen */
.game-screen {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
}

.video-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 20px;
    box-sizing: border-box;
}

.frame-wrapper {
    position: relative;
    width: 1280px;
    height: 1096px;
    max-width: 100%;
    max-height: 100%;
    flex-shrink: 1;
}

/* Responsive scaling using container query approach */
@media (max-aspect-ratio: 1280/1096) {
    /* Height is the limiting factor - scale based on height */
    .frame-wrapper {
        width: auto;
        height: 100%;
        aspect-ratio: 1280 / 1096;
    }
}

@media (min-aspect-ratio: 1280/1096) {
    /* Width is the limiting factor - scale based on width */
    .frame-wrapper {
        width: 100%;
        height: auto;
        aspect-ratio: 1280 / 1096;
    }
}

.video-container {
    display: f%;
    height: 100%;
    max-width: 100vw;
    max-height: 100vh;
    max-height: 100dvh; /* Dynamic viewport height for mobile */
}

.frame-wrapper {
    position: relative;
    width: 1280px;
    height: 1096px;
    /* Calculate scale to fit within viewport with safe padding */
    --padding: 20px;
    --available-width: calc(100vw - var(--padding) * 2);
    --available-height: calc(100vh - var(--padding) * 2);
    --available-height-dvh: calc(100dvh - var(--padding) * 2);
    --scale-x: calc(var(--available-width) / 1280);
    --scale-y: calc(var(--available-height-dvh) / 1096);
    --scale: min(var(--scale-x), var(--scale-y), 1);
    transform: scale(var(--scale));
    transform-origin: center center;
    flex-shrink: 0;
    /* Prevent any overflow */
    max-width: 100%;
    max-height: 100%ar(--scale-x), var(--scale-y), 1);
    transform: scale(var(--scale));
    transform-origin: center;
    /* Ensure proper scaling behavior */
    flex-shrink: 0;
}

.video-frame {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    pointer-events: none;
    object-fit: contain;
}

.splash-image {
    position: absolute;
    top: 8.76%; /* 96/1096 */
    left: 12.5%; /* 160/1280 */
    width: 75%; /* 960/1280 */
    height: 65.69%; /* 720/1096 */
    z-index: 1;
    object-fit: cover;
}

.splash-image.hidden {
    display: none;
}

.video-player {
    position: absolute;
    top: 8.76%; /* 96/1096 */
    left: 12.5%; /* 160/1280 */
    width: 75%; /* 960/1280 */
    height: 65.69%; /* 720/1096 */
    z-index: 1;
    border-radius: 0;
    box-shadow: none;
    object-fit: cover;
    display: none; /* Hidden initially until first video plays */
}

.video-player.active {
    display: block;
}

.caption-container {
    position: absolute;
    bottom: 9.85%; /* 108/1096 */
    left: 50%;
    transform: translateX(-50%);
    width: 53.13%; /* 680/1280 */
    height: 5.84%; /* 64/1096 */
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.caption-letter {
    position: absolute;
    left: -22.8%; /* -155/680 */
    top: 6.25%; /* 4/64 */
    width: 8.24%; /* 56/680 */
    aspect-ratio: 1;
    color: #FFBD43;
    text-shadow: 0 0 4px #FFC98C;
    font-family: 'VT323', monospace;
    font-size: 3em;
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    text-align: center;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
}

.info-icon {
    position: absolute;
    left: -22.8%; /* -155/680 */
    top: 6.25%; /* 4/64 */
    width: 8.24%; /* 56/680 */
    aspect-ratio: 1;
    color: #FFBD43;
    text-shadow: 0 0 4px #FFC98C;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    font-size: 48px;
    line-height: 1;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s ease;
}

.info-icon:hover {
    color: #FFF;
    text-shadow: 0 0 8px #FFC98C;
    transform: scale(1.1);
}

.info-icon.hidden {
    display: none;
}

.caption-sentence {
    color: #FFBD43;
    text-shadow: 0 0 4px #FFC98C;
    font-family: 'VT323', monospace;
    font-size: 3em;
    font-style: normal;
    font-weight: 400;
    line-height: 64px;
    text-align: left;
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    position: relative;
}



.hidden-input {
    position: fixed;
    opacity: 0;
    pointer-events: auto;
    width: 1px;
    height: 1px;
    left: 0;
    top: 0;
    z-index: -1;
}



/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.caption {
    animation: fadeIn 0.3s ease;
}

.hint-text {
    font-family: 'VT323', monospace;
    font-size: 24px;
    color: #FFBD43;
    text-shadow: 0 0 4px #FFC98C;
    text-align: center;
    margin-top: 20px;
    display: none; /* Hidden by default since hint shows in caption */
    position: fixed; /* Use fixed instead of absolute to completely remove from layout */
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    pointer-events: none;
}

.hint-text.hidden {
    display: none;
}

/* Modal */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
}

.modal.hidden {
    display: none;
}

.modal-content {
    background-color: #1a1a1a;
    border: 2px solid #FFBD43;
    border-radius: 12px;
    padding: 40px;
    max-width: 600px;
    width: 90%;
    position: relative;
    box-shadow: 0 0 20px rgba(255, 189, 67, 0.3);
}

.modal-content h2 {
    font-family: 'VT323', monospace;
    color: #FFBD43;
    text-shadow: 0 0 4px #FFC98C;
    font-size: 2.5em;
    margin: 0 0 20px 0;
}

.modal-content p {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #fff;
    font-size: 1.1em;
    line-height: 1.6;
    margin: 0;
}

.modal-close {
    position: absolute;
    top: 10px;
    right: 15px;
    background: none;
    border: none;
    color: #FFBD43;
    font-size: 40px;
    cursor: pointer;
    padding: 0;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}container {
