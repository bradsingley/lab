@media (max-width: 480px) {
    .container {
        padding: 2px; /* Minimal padding for phones */
    }
    
    .frame-wrapper {
        --padding: 5px;
    }
    
    .hint-text {
        font-size: 18px;
    }
    
    .modal-content {
        padding: 20px;
        width: 95%;
    }
    
    .modal-content h2 {
        font-size: 1.8em;
    }
    
    .modal-content p {
        font-size: 0.95em;
    }
}

/* Handle very short screens (landscape phones) */
